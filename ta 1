import CryptoPoops from 0x01
import NonFungibleToken from 0x02

transaction(recipient: Address) {

    prepare(acct: AuthAccount){
      acct.save(<- CryptoPoops.createEmptyCollection(),to: /storage/Collection)
      acct.link< &CryptoPoops.Collection{NonFungibleToken.CollectionPublic} > (/public/Collection,target: /storage/Collection)
      }
      execute {
      log("storaged a Collection ")
      }
      }
